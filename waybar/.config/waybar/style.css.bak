/* Import theme colors and fonts */
@import "theme.css";

/* ===== BASE WAYBAR WINDOW ===== */
window#waybar {
  background: transparent;
  color: @text;
}

/* Floating rounded container ("Squircle 10") */
window#waybar > box {
  margin: 0px 0px 0 0px;             /* float away from top & sides */
  padding: 6px 10px;
  border-radius: 10px;                  /* 10px rounding */
  background: rgba(17, 17, 27, 0.96);   /* @base with slight transparency */
  border: 1px solid rgba(49, 50, 68, 0.9);
}

/* Left / center / right group containers */
.modules-left,
.modules-center,
.modules-right {
  padding: 0;
  margin: 0 10px;
}

/* Generic pill style for each module */
.modules-left > *,
.modules-center > *,
.modules-right > * {
  padding: 3px 10px;
  margin: 0 4px;
  border-radius: 10px;
  background: transparent;
  color: @text;
}

/* Hover effect on pills */
.modules-left > *:hover,
.modules-center > *:hover,
.modules-right > *:hover {
  background: rgba(49, 50, 68, 0.9);    /* @overlay-ish */
}

/* ===== WORKSPACES ===== */

#workspaces {
  margin-left: 2px;
}

#workspaces button {
  padding: 2px 8px;
  margin: 0 2px;
  border-radius: 10px;
  background: transparent;
  color: @subtext;
  border: none;
}

#workspaces button.focused {
  background: rgba(137, 180, 250, 0.25);  /* @blue */
  color: @text;
}

#workspaces button.urgent {
  background: rgba(250, 179, 135, 0.35);  /* @orange */
  color: @base;
}

#workspaces button:hover {
  background: rgba(49, 50, 68, 0.9);
}

/* ===== CENTER WINDOW TITLE ===== */

#window {
  padding: 0 10px;
  font-weight: 500;
  color: @text;
}

/* ===== LEFT SIDE MODULES ===== */

#cpu {
  color: @yellow;
}

#memory {
  color: @orange;
}

#idle_inhibitor {
  padding: 3px 8px;
  margin: 0 3px;
  border-radius: 10px;
  color: @blue;
}

#clock {
  margin-left: 10px;
  padding: 3px 12px;
  font-weight: 600;
  background: rgba(30, 30, 46, 0.95);
  border-radius: 10px;
  color: @text;
}

/* ===== RIGHT SIDE MODULES ===== */

#backlight {
  color: @yellow;
}

#network {
  color: @teal;
}

#pulseaudio {
  color: @blue;
}

#pulseaudio.microphone,
#pulseaudio#microphone {
  color: @red;
}

/* Updates chip */
#custom-updates {
  padding: 3px 10px;
  font-weight: 500;
  background: rgba(30, 30, 46, 0.95);
  border-radius: 10px;
  color: @text;
}

/* Tray */
#tray {
  padding-right: 4px;
}

/* Battery */
#battery {
  color: @green;
}

